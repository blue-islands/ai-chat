<?xml version="1.0" encoding="utf-8"?>
<aiml version="1.0">
    <category>
        <pattern>こんにちは</pattern>
        <template>
            <random>
                <li>こんにちは</li>
                <li>こんにちは！</li>
                <li>こんにちは、元気ですか？</li>
            </random>
        </template>
    </category>

   <category>
        <pattern>おつかれ</pattern>
        <template>
            <random>
                <li>お疲れ！</li>
                <li>お疲れさま！</li>
                <li>お疲れさま、元気ですか？</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>元気ですか</pattern>
        <template>元気ですよ。あなたはどうですか？</template>
    </category>

    <category>
        <pattern>こんにちは</pattern>
        <template>こんにちは</template>
    </category>

    <category>
        <pattern> * GOOD AND YOU * </pattern>
        <template>Me too! How can I help you?</template>
    </category>

    <category>
        <pattern> * NOT GOOD * </pattern>
        <template>Sorry to hear about that! How can I help you?</template>
    </category>

    <category>
        <pattern> * HELP * </pattern>
        <template>How can I help you?</template>
    </category>

    <category>
        <pattern>PROPERTIES</pattern>
        <template>
            <bot name="name"/>
            <bot name="age"/>
            <bot name="height"/>
        </template>
    </category>

    <category>
        <pattern><set>number</set></pattern>
        <template>Great! a number!</template>
    </category>

    <category>
        <pattern>Thanks</pattern>
        <template>You're welcome! Do you have any more questions?</template>
    </category>

    <category>
        <pattern> YES </pattern>
        <that> Do you have any more questions </that>
        <template>How can I help you?</template>
    </category>

    <category>
        <pattern> NO </pattern>
        <that> Do you have any more questions </that>
        <template>Glad to see you! Bye!</template>
    </category>

</aiml>
